{% extends "AcmeTestBundle::layout.html.twig" %}

{% block title "Rss reader" %}

{% block content_header '' %}

{% block content %}
    <h1 class="title">Rss settings/View</h1>
    <div id="block-form">
        <form action="{{ path('setting_view') }}" method="post" id="form">
            {{ form_widget(formView) }}
        </form>
    </div>
    <div id="block-table">
        <table border="3" width="100%">
            <thead>
                <th>Название</th>
                <th>URL</th>
                <th>Редактировать</th>
                <th>Удалить</th>
                <th>Активен</th>
            </thead>
            <tbody>
                {% for i in 0..count-1 %}
                    <tr>
                        <td>
                            {{ sources[i].name }}
                        </td>
                        <td>
                            {{ sources[i].url }}
                        </td>
                        <td>
                            <form action="{{ path('setting_edit') }}" method="post">
                                <input type="submit" name="btnEdit" class="btnEdit" value="Edit">
                                <input type="hidden" name="sourceId" value={{ sources[i].id }}>
                            </form>
                        </td>
                        <td>
                            <input type="checkbox" class="checkDelete" value={{ sources[i].id }}>
                        </td>
                        <td>
                            <input type="checkbox" class="checkSave" value={{ sources[i].id }}>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}